<UserControl x:Class="OsuSkinnable.SkinElementViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OsuSkinnable"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer x:Name="MyScrollViewer" VerticalScrollBarVisibility="Auto">
        <WrapPanel Name="SkinElementContainer" MinWidth="120" Width="{Binding ElementName=MyScrollViewer, Path=ViewportWidth}">
            
        </WrapPanel>
    </ScrollViewer>
</UserControl>
