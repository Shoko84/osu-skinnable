<UserControl x:Class="OsuSkinnable.SkinElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OsuSkinnable"
             mc:Ignorable="d" 
             Width="150" Height="220" d:DesignWidth="150" d:DesignHeight="220" Margin="10">
    <Grid Background="#2e81b7">
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="SkinElementName" Grid.Row="0" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" 
                   TextAlignment="Center" Foreground="#ecf0f1" Padding="10" TextTrimming="WordEllipsis" FontSize="12"/>
        <Image Name="SkinElementImage" Grid.Row="1" Width="96" Height="96"/>
    </Grid>
</UserControl>
